{# email/email.mjml.twig #}
<mjml>

    <mj-body background-color="#3A3F44" font-size="13px">
        <!-- EmailHeader -->
        <mj-section background-url="https://zupimages.net/up/18/45/wtf9.jpg"
                    background-size="cover"
                    full-width="full-width">
            <mj-column>
                <mj-spacer height="480px" />
            </mj-column>
        </mj-section>
        <!-- End EmailHeader -->

        <!-- Email title -->
        <mj-section background-color="#272B30" vertical-align="top" padding-bottom="0px" padding-top="10px" full-width="full-width">

            <mj-column vertical-align="top" width="40%">
                <mj-image src="https://zupimages.net/up/18/45/wjr8.jpg" alt="Logo du Louvre"></mj-image>
            </mj-column>
        </mj-section>
        <mj-section background-color="#272B30" vertical-align="top" padding-bottom="0px" padding-top="10px" full-width="full-width">
            <mj-column>
                <mj-text color="#7A8288" font-size="30px" font-weight="bold" font-family="open Sans Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="30px" padding-top="0px" align="center">

                    Confirmation de commande

                </mj-text>
            </mj-column>
        </mj-section>
        <!-- End Email title -->

        <!-- Email body -->
        <!-- Command title -->
        <mj-section background-color="#272B30">
            <mj-column>
                <mj-text align="center" color="#e9ecef" font-size="22px" font-family="open Sans Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px">

                    La commande<br />

                </mj-text>
                <mj-divider border-width="2px" border-color="#ffffff" width="50%" />
                <mj-divider border-width="2px" border-color="#ffffff" width="25%" />
            </mj-column>
        </mj-section>
        <!-- End Command title -->

        <!-- Command -->
        <mj-section background-color="#272B30">
            <mj-column>
                <mj-text align="left" color="#ffffff" font-size="20px" font-family="open Sans Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px">

                    Numéro de commande : {{ command.getId }}<br></br>

                    Nombre de ticket : {{ command.getNumberOfTicket }}<br></br>

                    Prix total : {{ command.getTotalPrice }}€<br></br>

                </mj-text>
                <mj-divider border-width="2px" border-color="#ffffff" width="80%"/>
            </mj-column>
        </mj-section>
        <!-- End Command -->

        <!-- Loop ticket(s) -->
        {% for ticket in tickets %}
            <!-- Ticket(s) title -->
            <mj-section background-color="#272B30">
                <mj-column>
                    <mj-text align="center" color="#e9ecef" font-size="22px" font-family="open Sans Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px">

                        Ticket n°{{ ticket.getId }}<br />

                    </mj-text>
                    <mj-divider border-width="2px" border-color="#ffffff" width="50%" padding-bottom="0px"/>
                </mj-column>
            </mj-section>
            <!-- End Ticket(s) title -->

            <!-- Ticket(s) content -->
            <mj-section background-color="#272B30" padding="0px">
                <mj-column>
                    <mj-text font-size="20px" color="#ffffff" align="center">

                        Visiteur : {{ ticket.getName() }} - {{ ticket.getFirstName() }}<br></br>

                    </mj-text>
                    <mj-text font-size="20px" color="#ffffff" align="center">

                        Date de naissance : le {{ ticket.getBirthDate()|date('d-M-Y') }}<br></br>

                    </mj-text>
                    <mj-text font-size="20px" color="#ffffff" align="center">

                        Date de la visite : le {{ ticket.getVisitAt()|date('d-M-Y') }} à {{ ticket.getVisitAt()|date('H:i') }}<br></br>

                    </mj-text>
                    <mj-text font-size="20px" color="#ffffff" align="center">

                        Prix unitaire : {{ ticketService.deductPrice(ticket)}}<br></br>

                    </mj-text>
                    <mj-divider border-width="2px" border-color="#ffffff" width="25%"/>
                    <mj-divider border-width="2px" border-color="#ffffff" width="80%"/>
                </mj-column>
            </mj-section>
            <!-- Ticket(s) content -->
        {% endfor %}
        <!-- End Loop -->

        <!-- See you soon -->
        <mj-section background-color="#7A8288" padding-bottom="20px" padding-top="20px">
            <mj-column vertical-align="middle" width="100%">
                <mj-text align="left" color="#ffffff" font-size="15px" font-family="open Sans Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px">

                    Merci et à bientot pour votre visite<br /> Le Louvre

                </mj-text>
            </mj-column>
        </mj-section>
        <!-- End See you soon -->

        <!-- End Email body -->
    </mj-body>

</mjml>