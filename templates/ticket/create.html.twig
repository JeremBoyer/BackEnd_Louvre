{% extends 'base.html.twig' %}

{% form_theme formTicket 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class="text-center">Billetterie </h1>

        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-6">
                {{ form_start(formTicket) }}

                {{ form_row(formTicket.name, { 'attr': {'placeholder': "Nom du visiteur"}, 'label': "Nom"}) }}
                {{ form_row(formTicket.firstName, { 'attr': {'placeholder': "Prénom du visiteur"}, 'label': "Prénom"}) }}
                {{ form_row(formTicket.birthDate, { 'attr': {'placeholder': "Date d'anniversaire"}, 'format': "dd-MM-yyyy"}) }}
                {{ form_row(formTicket.country, { 'attr': {'placeholder': "Pays"}}) }}
                {{ form_row(formTicket.type, { 'label': "Possedez vous une carte de réduction?"}) }}
                {{ form_row(formTicket.visitAt) }}
                {{ form_row(formTicket.priceType, {"label": "Type de prix provisoire"}) }}

                <button type="submit" class="btn btn-primary">Enregistrer</button>

                {{ form_end(formTicket) }}
            </div>
            <div class="col-md-3">

            </div>
        </div>
    </div>

{% endblock %}